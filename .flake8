[flake8]
# F401: Module imported but unused
# You can add other error codes you want to ignore, separated by commas
ignore = F401, E402, E302 , W293, W291, E128, E402, f841

# Maximum line length
max-line-length = 120

# Exclude patterns for directories
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.pyc,
    *.egg-info,
    .eggs,
    venv,
    .venv
